[Unit]
Description="PiCamHome PiCam automatic footage recording service"
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/home/pi/Documents/PiCamHome/PiCam/picam.sh
WorkingDirectory=/home/pi/Documents/PiCamHome/PiCam
StandardOutput=inherit
StandardError=inherit
Restart=on-failure
RestartSec=5s
User=pi
RuntimeMaxSec=1800

[Install]
WantedBy=default.target
